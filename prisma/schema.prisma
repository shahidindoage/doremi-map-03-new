generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  title     String
  createdAt DateTime @default(now())
  tables    Table[]
}

model Table {
  id        Int      @id @default(autoincrement())
  eventId   Int
  number    Int
  color     String?
  price     Float
  top       String
  left      String
  seats     Seat[]
  event     Event    @relation(fields: [eventId], references: [id])

  @@unique([eventId, number])
}

model Seat {
  id        Int      @id @default(autoincrement())
  tableId   Int
  seatNo    Int
  label     String?
  status    SeatStatus @default(AVAILABLE)
  bookedBy  Int?
  bookedAt  DateTime?
  table     Table    @relation(fields: [tableId], references: [id])
  createdAt DateTime @default(now())

  @@unique([tableId, seatNo])
}

enum SeatStatus {
  AVAILABLE
  BOOKED
  BLOCKED
}

// âœ… Admin model with roles
model Admin {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  role      AdminRole @default(MANAGER) // default child admin
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum AdminRole {
  OWNER   // Super admin / full privileges
  MANAGER // Child admin / limited privileges
}

model Booking {
  id          Int      @id @default(autoincrement())
  tableNumber Int
  seatNo      Int
  name        String
  email       String
  phone       String
  bookedAt    DateTime @default(now())
   paymentIntentId String 
}


model Coupon {
  id          Int       @id @default(autoincrement())
  code        String    @unique
  discount    Float     // can be AED amount or percentage if you like
  type        CouponType @default(FIXED) // FIXED = AED, PERCENT = %
  expiry      DateTime
  maxUsage    Int?       // optional: limit number of times coupon can be used
  usageCount  Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum CouponType {
  FIXED
  PERCENT
}
